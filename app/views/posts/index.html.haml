#posts_nav
  %ul
    - @posts.each do |post|
      %li
        = link_to post.title, post, :remote => true
#posts
  - @posts.each do |post|
    %h1
      = post.title
    = post.body
    %br
    = link_to 'Show', post
    = link_to 'Edit', edit_post_path(post)
    = link_to 'Destroy', post_path(post), :confirm => 'Are you sure?', :method => :delete